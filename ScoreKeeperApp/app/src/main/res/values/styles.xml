<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9E80</item>
        <item name="colorPrimaryDark">#212121</item>
    </style>
    
    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
    </style>
    
    <style name="BigButtonStyle" parent="AppTheme">
        <item name="android:layout_width">314dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/in_top</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
