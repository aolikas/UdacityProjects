<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_container_background"
    android:minHeight="@dimen/min_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/image_width" android:contentDescription="TODO"  android:layout_marginStart="@dimen/image_margin_left"  android:contentDescription="TODO" 
        android:layout_height="@dimen/image_height"
        android:layout_marginLeft="@dimen/image_margin_left" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/container_list_item_padding_left" android:paddingStart="@dimen/container_list_item_padding_left">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            tools:text="Miniatur Wunderland" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            tools:text="Hamburg" />

    </LinearLayout>

</LinearLayout>

