<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buran.mymusicapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists" />
        <activity
            android:name=".MyCollectionActivity"
            android:label="@string/category_my_collection" />
        <activity
            android:name=".MyPlaylistActivity"
            android:label="@string/category_my_playlist" />
        <activity android:name=".DownloadActivity"
            android:label="@string/category_download_songs"></activity>
    </application>

</manifest>